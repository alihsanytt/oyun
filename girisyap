import hashlib
import getpass

def giris_kontrol(kullanici_adi, sifre):
  """
  Bu fonksiyon, bir kullanici adinin ve sifrenin geçerli olup olmadığını kontrol eder.

  Args:
    kullanici_adi: Kullanıcı adı.
    sifre: Kullanıcının şifresi (hash olarak).

  Returns:
    Giriş başarılıysa True, aksi takdirde False.
  """
  gercek_kullanici_adi = "AlihsanYT"  # Değiştirin
  gercek_sifre_hash = hashlib.sha256("017634".encode("utf-8")).hexdigest()  # Değiştirin

  if kullanici_adi == gercek_kullanici_adi and sifre == gercek_sifre_hash:
    return True
  else:
    return False

while True:
  kullanici_adi = input("Kullanıcı adı giriniz: ")
  sifre = getpass.getpass("Şifre giriniz: ")

  sifre_hash = hashlib.sha256(sifre.encode("utf-8")).hexdigest()

  if giris_kontrol(kullanici_adi, sifre_hash):
    print("Giriş Başarılı!")
    break
  else:
    print("Hatalı kullanıcı adı veya şifre.")
